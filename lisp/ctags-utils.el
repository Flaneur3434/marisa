(defun ken_nc/keyword-prompt ()
  (interactive)
  "Prompt for candidate among KEYWORDS."
  (let ((def (car ken_nc/ctags-lang-hist)))
    (completing-read
     (format "Select keyword [%s]: " def)
     ken_nc/ctags-lang-list nil nil nil 'ken_nc/ctags-lang-hist def)))

(defun ken_nc/create-tags (dir-name)
  "Create tags file."
  (interactive "DDirectory: ")
  (shell-command
   (format "%s -f TAGS -e -R --languages=%s *" path-to-ctags (ken_nc/keyword-prompt))))

